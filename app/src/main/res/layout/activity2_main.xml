<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Enter Bus Number"
      />

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter Valid Vehicle Number"
        android:id="@+id/input"/>
  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:id="@+id/btnSearch"
      android:layout_width="376dp"
      android:layout_height="60dp"
      android:layout_marginStart="@android:dimen/app_icon_size"
      android:text="GO" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Bus Number"
      android:id="@+id/tvBusNo" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:text="Source : "
    android:id="@+id/tvSource"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:text="Destination : "
      android:id="@+id/tvDest"
    />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:text="Bus Stops List : "
      android:id="@+id/tvbusList"
    android:textColor="#11ffee"
    />
  <ListView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:id="@+id/lvStops"
    />
</LinearLayout>